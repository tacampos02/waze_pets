    <li>Name: <%= place.name %></li>
    <li>Adress: <%= place.adress %></li>
    <li>Owner: <%= place.owner %></li>
    <li>Schedule: <%= place.schedule %></li>
    <li>Type: <%= place.kind %></li>
    <li>Number: <%= place.number %></li>
    </ul>
<p class="card-text">
   <%= link_to 'update info', edit_place_path(place) %>
   <%= link_to 'add comment', new_place_comment_path(place) %>
   <%= link_to 'show', place_path(place)%>
<% end %>
</p>
